<style type="text/css">
  .game-board-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .game-page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .game-page h2 {
    text-align: center;
    font-size: 30px;
    /** remove extra margin */
    margin: 0;
