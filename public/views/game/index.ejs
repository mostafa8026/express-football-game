  .playground {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 40px 0;
  }

  .team {
    margin: 0 40px;
  }

  .team h3 {
    text-align: center;
    font-size: 20px;
    margin-bottom: 10px;
  }

  .players {
    display: flex;
    flex-wrap: wrap;
  }

  /* player style: square with a bit rounded, name: center, score: bottom right */
  .player {
    width: 100px;
    height: 100px;
    border: 1px solid #ccc;
    border-radius: 10%;
    margin: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .player:hover {
    /* add shadow when hover */
    box-shadow: 0 0 10px #ccc;
    /* scale up a bit when hover */
    transform: scale(1.1);
    cursor: default;
    /* remove selection */
    user-select: none;
  }

  .player__name {
    font-size: 16px;
    font-weight: bold;
    text-align: center;
  }

  .player__name::before {
    /* emoji player */
    content: '\1F3C3 ';
  }

  .player__score {
    font-size: 16px;
    font-weight: bold;
    position: absolute;
    bottom: 5px;
    right: 5px;
  }

  .player__score::after {
    /* emoji goal */
    content: '\26BD ';
    /* smaller */
    font-size: 12px;
  }

  .home>.players>.player {
    background-color: red;
    color: white;
  }

  .home>h3 {
    color: red;
  }

  .away>.players>.player {
    background-color: #1e90ff;
    color: #fff;
  }

  .away>h3 {
    color: #1e90ff;
  }

  /* right side board events, scrollable with fixed height */
  .board-events {
    height: 450px;
    overflow-y: scroll;
    width: 400px;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
  }

  .board-event {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    /* remove cursor */
    cursor: default;
  }

  .board-event:hover {
    background-color: #ccc;
  }

  .board-event__title {
    /* left aligned */
    font-weight: bold;
    font-size: 16px;
  }

  .board-event__description {
    font-size: 14px;
  }
</style>

<script type="text/javascript">
  // fetch events every 5 seconds from /events/all
  // and update the board
  function updateBoard() {
    fetch('/events/all')
      .then(res => res.json())
      .then(events => {
        console.log(events);
        const boardEvents = document.querySelector('.board-events');
        // clear all events
        boardEvents.innerHTML = '';
        // add new events
        events.forEach(event => {
          const eventDiv = document.createElement('div');
          eventDiv.classList.add('board-event');
          const titleDiv = document.createElement('div');
          titleDiv.classList.add('board-event__title');
          titleDiv.innerText = event.name;
          const descriptionDiv = document.createElement('div');
          descriptionDiv.classList.add('board-event__description');
          descriptionDiv.innerText = event.description;
          eventDiv.appendChild(titleDiv);
          eventDiv.appendChild(descriptionDiv);
          boardEvents.appendChild(eventDiv);
        });
        // scroll to the bottom
        scrollToBottom();
      });
  }

  updateBoard();
  // update board every 5 seconds
  setInterval(updateBoard, 5000);

  // scroll to the bottom
  function scrollToBottom() {
    const boardEvents = document.querySelector('.board-events');
    boardEvents.scrollTop = boardEvents.scrollHeight;
  }
</script>

